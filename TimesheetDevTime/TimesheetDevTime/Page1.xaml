<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TimesheetDevTime.Page1">
    <StackLayout>

        <Button Text="Get started" TextColor="White" Clicked="LoadEmployees" Padding="25" CornerRadius="5" BackgroundColor="black" HorizontalOptions="Center"
                BorderColor="Orange" BorderWidth="1"
           VerticalOptions="CenterAndExpand" >
        </Button>

        <Label  Text="...select your name from the list:" HorizontalOptions="Center" TextColor="Orange" ></Label>

        <ListView Margin="30" x:Name="employeeList" SeparatorColor="red" BackgroundColor="black" />

        <Button Text="Continue to work" Clicked="LoadAssignmentPage" CornerRadius="5" HorizontalOptions="Center" VerticalOptions="CenterAndExpand"
                BackgroundColor="black" TextColor="white" BorderColor="Lime" BorderWidth="1" Padding="25">
        </Button>


    </StackLayout>
</ContentPage>